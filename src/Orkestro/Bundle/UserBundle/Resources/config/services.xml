<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter
                key="orkestro_oauth_user_provider.class"
                >Orkestro\Bundle\UserBundle\Security\Core\User\FOSUBUserProvider</parameter>
    </parameters>
    <services>
        <service
                id="orkestro_oauth_user_provider"
                class="%orkestro_oauth_user_provider.class%"
                >
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="facebook">facebookId</argument>
                <argument key="google">googleId</argument>
            </argument>
        </service>
        <service
                id="orkestro.twig.social_expose_extension"
                class="Orkestro\Bundle\UserBundle\Twig\SocialExposeExtension"
                >
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
