<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
            name="Orkestro\Bundle\LocaleBundle\Model\Locale"
            table="orkestro_locale">
        <id name="code" column="code" type="string" length="255" />
        <field name="title" column="title" type="string" length="255" />
        <field name="isEnabled" column="is_enabled" type="boolean" />
        <field name="isFallback" column="is_fallback" type="boolean" />
    </entity>
</doctrine-mapping>