{% extends "@OrkestroWeb/Backend/base.html.twig" %}
{% trans_default_domain "backend" %}

{% import "OrkestroWebBundle:Backend/Translation:show.html.twig" as form_translations %}

{% block title %}
    {{ "orkestro.manufacturer.headers.manufacturer"|trans }}
{% endblock %}
{% block page_title -%}
    <a class="btn-link icon-wrap-sm" href="{{ path('orkestro_backend_manufacturer_list') }}">
        <i class="fa fa-angle-left"></i>
    </a>
    {{ "orkestro.manufacturer.headers.manufacturer"|trans }} <small>{{ entity.title }} &mdash; {{ entity.id }}</small>
{% endblock %}

{% block body -%}
    <div class="col-lg-6">
        <div class="panel">
            <div class="panel-body">
                <h3 class="mar-btm">
                    <small>
                        {{ "orkestro.manufacturer.labels.id"|trans }}
                    </small>
                    {{ entity.id }}
                </h3>

                <h3 class="mar-btm">
                    <small>
                        {{ "orkestro.manufacturer.labels.url"|trans }}
                    </small>
                    {{ entity.url }}
                </h3>

                <h3 class="mar-btm">
                    <small>
                        {{ "orkestro.manufacturer.labels.country"|trans }}
                    </small>
                    {{ entity.country }}
                </h3>
            </div>
        </div>

        <hr />

        <div class="tab-base mar-no">
            {{ form_translations.partialTranslations(translation_form.translations, ['title', 'url', 'shortDescription', 'fullDescription', 'metaTitle', 'metaDescription', 'metaKeywords']) }}
        </div>

        <hr />

        <div class="panel">
            <div class="panel-body">
                <a class="btn btn-warning btn-labeled fa fa-arrow-left" href="{{ path('orkestro_backend_manufacturer_list') }}">{{ 'orkestro.manufacturer.buttons.to_list'|trans }}</a>
                <a class="btn btn-primary btn-labeled fa fa-pencil" href="{{ path('orkestro_backend_manufacturer_edit', {'id': entity.id}) }}">{{ 'orkestro.manufacturer.buttons.edit'|trans }}</a>
                {{ form_start(delete_form, {'attr': {'class': 'inline'}}) }}
                    {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-s btn-danger btn-labeled fa fa-trash'}, 'label': 'orkestro.manufacturer.buttons.delete'|trans}) }}
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
